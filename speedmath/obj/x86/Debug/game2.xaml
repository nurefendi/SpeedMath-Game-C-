                 HorizontalAlignment="Center" 
                 Height="120" 
                 Margin="0,-300,0,0"                  
                 VerticalAlignment="Center" 
                 Width="120"/>
        <Ellipse Fill="GhostWhite" 
                 HorizontalAlignment="Center" 
                 Height="100" 
                 Margin="0,-300,0,0"                  
                 VerticalAlignment="Center" 
                 Width="100"/>
        <TextBlock x:ConnectionId='2' x:Name="Timeaja" 
                   HorizontalAlignment="Center" 
                   Margin="0,-330,0,0" 
                   TextWrapping="Wrap" 
                   FontSize="50"
                   Text="10"                    
                   VerticalAlignment="Center"/>
